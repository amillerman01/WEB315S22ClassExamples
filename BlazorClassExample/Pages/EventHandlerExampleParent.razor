@page "/example-parent"

<h1>Parent-child example</h1>

<EventHandlerExampleChild Title="Parent Gave Child this title" OnClickCallback="@ShowMessage" OnClickCallbackAsync="@(async (args) => { 
            await Task.Yield(); 
            message = args; 
        })">
    Content of the child component is supplied by the parent component.
</EventHandlerExampleChild>

<p>@message</p>

@code {
    private string message;

    private void ShowMessage(MouseEventArgs e)
    {
        message = $"Called this method from the child element! ({e.ClientX}:{e.ClientY})";
    }
}